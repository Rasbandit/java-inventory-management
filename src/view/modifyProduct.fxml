<AnchorPane prefHeight="643.0" prefWidth="988.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ModifyProductController">
   <children>
      <Label layoutX="34.0" layoutY="34.0" text="Add Product">
         <font>
            <Font name="Arial" size="18.0" />
         </font>
      </Label>
      <TableView fx:id="allPartsTable" layoutX="546.0" layoutY="67.0" prefHeight="200.0" prefWidth="406.0">
         <columns>
            <TableColumn fx:id="colIdAll" prefWidth="75.0" text="Part ID" />
            <TableColumn fx:id="colNameAll" prefWidth="97.0" text="Part Name" />
            <TableColumn fx:id="colLvlAll" prefWidth="122.0" text="Inventory Level" />
            <TableColumn fx:id="colPriceAll" prefWidth="111.0" text="Price Per Item" />
         </columns>
      </TableView>
      <TextField fx:id="searchAllParts" layoutX="766.0" layoutY="32.0" prefHeight="26.0" prefWidth="186.0" promptText="Search Part  by Id/Name" />
      <TableView fx:id="selectedPartsTable" layoutX="546.0" layoutY="333.0" prefHeight="200.0" prefWidth="406.0">
         <columns>
            <TableColumn fx:id="colIdSelected" prefWidth="75.0" text="Part ID" />
            <TableColumn fx:id="colNameSelected" prefWidth="97.0" text="Part Name" />
            <TableColumn fx:id="colLvlSelected" prefWidth="127.0" text="Inventory Level" />
            <TableColumn fx:id="colPriceSelected" prefWidth="106.0" text="Price Per Item" />
         </columns>
      </TableView>
      <Button layoutX="909.0" layoutY="285.0" mnemonicParsing="false" onAction="#addPart" text="Add" />
      <Button layoutX="866.0" layoutY="546.0" mnemonicParsing="false" onAction="#removePart" text="Remove Part" />
      <Button layoutX="369.0" layoutY="584.0" mnemonicParsing="false" onAction="#saveProduct" text="Save" />
      <Button fx:id="cancelProduct" layoutX="494.0" layoutY="584.0" mnemonicParsing="false" onAction="#goHome" text="Cancel" />
      <GridPane layoutX="34.0" layoutY="65.0" prefHeight="169.0" prefWidth="423.0">
         <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="96.0" minWidth="10.0" prefWidth="44.0" />
            <ColumnConstraints hgrow="SOMETIMES" maxWidth="155.0" minWidth="10.0" prefWidth="130.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Label text="ID">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="idInput" disable="true" editable="false" promptText="Auto Gen - Disabled" GridPane.columnIndex="1" />
            <Label text="Name" GridPane.rowIndex="1">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="nameInput" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Inv" GridPane.rowIndex="2">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="invInput" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Price/Cost" GridPane.rowIndex="3">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="priceInput" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <Label text="Max" GridPane.rowIndex="4">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="maxInput" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <Label text="Min" GridPane.columnIndex="2" GridPane.rowIndex="4">
               <font>
                  <Font name="Arial" size="12.0" />
               </font>
            </Label>
            <TextField fx:id="minInput" GridPane.columnIndex="3" GridPane.rowIndex="4" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
